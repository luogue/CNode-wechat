/**app.wxss**/
 @import "./font/iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page {
  height: 100%;
  font-size: 30rpx;
}

/* 加载样式 */
.loading {
  position: fixed;
  top: 0;
  text-align: center;
  background: #F2F7FB;
  width: 100%;
  height: 100%;
  line-height: 100%;
}
.loading image {
  margin-top: 40%;
  width: 150rpx;
  opacity: 0.3;
}
.loading text {
  display: block;
  margin-top: 16rpx;
  color: #B6C0CB;
}
.loading-text {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #D5DBDB;
}

/* 居中提示 */
.public-notice {
  padding: 20rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  color: #FFF;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
}
.public-notice text {
  padding: 0 30rpx;
  position: absolute;
  width: 90%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}